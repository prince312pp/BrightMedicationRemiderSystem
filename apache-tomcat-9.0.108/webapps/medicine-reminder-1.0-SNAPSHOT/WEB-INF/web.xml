<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>Medicine Reminder App</display-name>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>AddReminderServlet</servlet-name>
        <servlet-class>com.example.servlet.AddReminderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddReminderServlet</servlet-name>
        <url-pattern>/add-reminder</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewRemindersServlet</servlet-name>
        <servlet-class>com.example.servlet.ViewRemindersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewRemindersServlet</servlet-name>
        <url-pattern>/view-reminders</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteReminderServlet</servlet-name>
        <servlet-class>com.example.servlet.DeleteReminderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteReminderServlet</servlet-name>
        <url-pattern>/delete-reminder</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateReminderServlet</servlet-name>
        <servlet-class>com.example.servlet.UpdateReminderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateReminderServlet</servlet-name>
        <url-pattern>/update-reminder</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MedicineSuggestServlet</servlet-name>
        <servlet-class>com.example.servlet.MedicineSuggestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MedicineSuggestServlet</servlet-name>
        <url-pattern>/suggest-medicines</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MarkTakenServlet</servlet-name>
        <servlet-class>com.example.servlet.MarkTakenServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MarkTakenServlet</servlet-name>
        <url-pattern>/mark-taken</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DueRemindersServlet</servlet-name>
        <servlet-class>com.example.servlet.DueRemindersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DueRemindersServlet</servlet-name>
        <url-pattern>/due-reminders</url-pattern>
    </servlet-mapping>
</web-app>
